@model IEnumerable<DreamCupCakes.Models.Cupcake>
@{
    ViewData["Title"] = "Gerenciar Cupcakes";
}

<h1 class="text-success mb-4">Gerenciamento de Cupcakes</h1>
<hr />

<div class="mb-4 d-flex justify-content-between">
    <a asp-action="Cadastrar" class="btn btn-success">
        <i class="bi bi-plus-circle"></i> Adicionar Novo Cupcake
    </a>
    <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-house-door"></i> Voltar ao Dashboard
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="table-responsive">
    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-success">
            <tr>
                <th>Foto</th>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Valor)</th>
                <th>@Html.DisplayNameFor(model => model.Ativo)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 100px;">
                        @if (!string.IsNullOrEmpty(item.FotoUrl))
                        {
                            <img src="@item.FotoUrl" class="img-thumbnail" style="height: 60px; width: 60px; object-fit: cover;" alt="@item.Nome" />
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>R$ @Html.DisplayFor(modelItem => item.Valor)</td>
                    <td>
                        @if (item.Ativo)
                        {
                            <span class="badge bg-success">Sim</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Não</span>
                        }
                    </td>
                    <td>
                        <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white">
                            <i class="bi bi-pencil"></i> Editar
                        </a>

                        <form asp-action="Deletar" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('ATENÇÃO! Tem certeza que deseja deletar o cupcake @item.Nome?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Deletar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">