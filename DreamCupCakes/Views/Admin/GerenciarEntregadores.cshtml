@model IEnumerable<DreamCupCakes.Models.Usuario>
@{
    ViewData["Title"] = "Gestão de Entregadores";
}

<h1 class="text-primary mb-4">Gestão de Entregadores</h1>
<hr />

<div class="mb-4 d-flex justify-content-between">
    <a asp-action="CadastrarEntregador" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Adicionar Novo Entregador
    </a>

    <a asp-action="Dashboard" class="btn btn-secondary">
        <i class="bi bi-house-door"></i> Voltar ao Dashboard
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="table-responsive">
    <table class="table table-hover table-striped shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Nome)</th>
                <th>@Html.DisplayNameFor(model => model.Email)</th>
                <th>@Html.DisplayNameFor(model => model.Telefone)</th>
                <th>@Html.DisplayNameFor(model => model.Endereco)</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                    <td>@Html.DisplayFor(modelItem => item.Endereco)</td>
                    <td>

                        <form asp-action="DeletarEntregador" asp-route-id="@item.Id" method="post" class="d-inline"
                              onsubmit="return confirm('Tem certeza que deseja deletar o entregador @item.Nome?');">
                            <button type="submit" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i> Deletar
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>