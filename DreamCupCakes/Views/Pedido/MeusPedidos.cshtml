@model List<DreamCupCakes.Models.Pedido>
@using System.Security.Claims
@{
    ViewData["Title"] = "Meus Pedidos para Entrega";
    var nomeEntregador = User.Identity?.Name ?? "Entregador";
}

<div class="container py-5">
    <h1 class="text-warning mb-4">
        <i class="bi bi-truck"></i> Dashboard do Entregador
    </h1>
    <h4 class="text-muted">Olá, @nomeEntregador! Seus pedidos de entrega:</h4>
    <hr />
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            Parabéns! Você não possui pedidos pendentes de entrega no momento.
        </div>
    }
    else
    {
        <div class="table-responsive mt-4">
            <table class="table table-hover table-striped shadow-sm">
                <thead class="table-warning">
                    <tr>
                        <th>ID</th>
                        <th>Data Pedido</th>
                        <th>Cliente</th>
                        <th>Endereço de Entrega</th>
                        <th>Status</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.DataPedido.ToString("dd/MM HH:mm")</td>
                            <td>@item.Cliente?.Nome</td>
                            <td>@item.Cliente?.Endereco</td>
                            <td>
                                @switch (item.Status)
                                {
                                    case "Entregue":
                                        <span class="badge bg-success">@item.Status</span>
                                        ; break;
                                    case "A caminho":

                                        <span class="badge bg-danger">@item.Status</span>
                                        ; break;
                                    case "Em Preparação":

                                        <span class="badge bg-primary">@item.Status</span>
                                        ; break;
                                    default:

                                        <span class="badge bg-secondary">@item.Status</span>
                                        ; break;
                                }
                            </td>
                            <td>
                                <a asp-controller="Pedido" asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                    Ver/Atualizar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <div class="text-center mt-5 d-flex justify-content-center gap-3">

        <a asp-controller="Cliente" asp-action="Perfil" class="btn btn-info">
            <i class="bi bi-person-gear"></i> Editar Meu Perfil
        </a>

        <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
            <button type="submit" class="btn btn-outline-danger">
                <i class="bi bi-box-arrow-right"></i> Sair
            </button>
        </form>
    </div>
</div>